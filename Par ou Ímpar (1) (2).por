programa {
  funcao inicio() {
    //Declaração de variáveis
    inteiro numero
    escreva("Informe um número: ")
    leia(numero)
    //Se o resto da divisão for 0 o número é par
    se(numero%2==0){
    //Entra se for par
    escreva("O seu número é par!")
    }senao{
      //Entra se for impar
      escreva("O seu número é impar!")
    }
  }
}
